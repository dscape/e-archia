/*
  ###################################################################
  XHTML standard elements
  ###################################################################
 */
p,code {
    padding-bottom: 1.2em;
}
h1,h2,h3,h4,h5 {
    text-transform: uppercase;
}
a {
    color: #06f;
    text-decoration:none;
}
a:visited {
    color: #09f;
}
a:hover {
    color: #f06;
}
body {
    background-color: #e7e7e7;
    font-family: 'HelveticaNeue','Helvetica Neue','Arial',sans-serif;
    font-size: .8em;
    color: #444;
}
blockquote {
    background: #fafafa url(/images/quote.gif) no-repeat right top;
    border-bottom: 1px solid #eee;
    border-top: 1px solid #eee;
    color: #444;
    display: block;
    margin-bottom: 12px;
    padding: 12px;
    font-size:1.1em;
}
blockquote .author {
    padding-top:1em;
    text-align:right;
    font-size:.8em;
}
code, pre, .panel_main_page_left, .stripes {
    font-size: 0.8em;
    background: url(/images/bg_code.png);
    border-style: solid;
    border-width: 1px 1px 1px 6px;
    border-color: #eee #eee #eee #f06;
    color: #444;
    display: block;
    font-family: "Monaco", "Lucida Sans Unicode", serif;
    margin-bottom: 12px;
    padding: 8px 10px;
    white-space: pre;
}
h1 {
    color: #f06;
    font-size: 1.3em;
    font-weight: bold;
    margin: 0px;
}
h2 {
    color: #06f;
    font-size: 1.1em;
    font-weight: bold;
    margin: 0px;
}
h3 {
    color: #f06;
    font-size: 1em;
    margin: 0px;
    font-family: 'HelveticaNeue-Light','Helvetica Neue','Helvetica Neue Light','Arial',sans-serif;
}
h4 {
    color: #f06;
    font-size: 1em;
    margin: 0px;
    font-family: 'HelveticaNeue-Light','Helvetica Neue','Helvetica Neue Light','Arial',sans-serif;
    border-style: solid;
    border-width: 0px 0px 2px 0px;
    border-color: #eee #eee #eee #f06;
}
img {
    border:0;
}
em {
    color:#06f;
}
p {
}
ul {
    margin-left: 10px;
    padding: 0px;
}
li {
    background:url(/images/silk/icons/bullet_blue.png) no-repeat;
    padding: 0 0 0 25px;
    line-height: 1em;
}
dl {
    margin-left: 0px;
    padding: 0px;
}
dd {
    margin:0px;
    line-height: 1em;
    font-size:1.1em;
    text-transform:capitalize;
    font-family: 'HelveticaNeue-Light','Helvetica Neue','Helvetica Neue Light','Arial',sans-serif;
}
dt {
    font-size:.8em;
    border-style:dotted;
    border-width: 0px 0px 1px 0px;
    border-color: #ddd;
    text-transform:lowercase;
}
br {
    font-size:large;
}
/*
  ###################################################################
  working on rails - derailing
  ###################################################################
 */
.errorExplanation {
    padding: 12px 0 0 0;
    margin-bottom: 1.5em;
    border-style: solid;
    border-width: 1px 0px 1px 0px;
    border-color: #eee;
    background:url(/images/bg_code.png);
}
.errorExplanation h2 {
    width:95%;
    color: #f06;
    font-size: 1.2em;
    height: 20px;
    background: url(/images/silk/icons/exclamation.png) no-repeat right top;
}
.errorExplanation ul {
    margin: 0 0 15px 0;
    padding:  0 0 5px 0;
}
.errorExplanation p {
    margin:0;
    padding:0;
    visibility:hidden;
}
.errorExplanation li {
    list-style: none;
    margin: 0;
    border-bottom: 1px dotted #f06;
    color:#f06;
    text-align:left;
    background:url(/images/silk/icons/error.png) no-repeat 5px top;
}
/*
  ###################################################################
  For round edges
  ###################################################################
 */
.roundtl,.roundtr,.roundbl,.roundbr {
    background: url(/images/round.png);
    height: 16px;
    width: 14px;
}
.roundtl,.roundbl {
    float: left;
}
.roundtr,.roundbr {
    float: right;
}
.roundtr {
    background-position: right top;
}
.roundbr {
    background-position: right bottom;
}
.roundbl {
    background-position: left bottom;
}
/*
  ###################################################################
  From niceforms
  ###################################################################
 */
input, textarea {
    font-family: 'HelveticaNeue','Helvetica Neue','Arial',sans-serif;
    font-size: .9em;
    color:#404040;
}
label {
    color:#f06;
    cursor:pointer;
    line-height:1.5em;
    font-family: 'HelveticaNeue','Helvetica Neue','Arial',sans-serif;
    text-transform: uppercase;
    font-size: 0.8em;
    padding-left:20px;
    vertical-align:top;
}
label.chosen {
    color:#333;
}
/* Transparent items */
.outtaHere {
    position:absolute;
    left:-3000px;
}
/* Radio buttons */
.radioArea, .radioAreaChecked {
    display:block;
    float:left;
    clear:left;
    width:15px;
    height:14px;
    font-size:0;
    cursor:pointer;
}
.radioArea {
    background:url(/images/niceforms/radio.gif) no-repeat left top;
}
.radioAreaChecked {
    background:url(/images/niceforms/radio.gif) no-repeat left bottom;
}
/* Checkboxes */
.checkboxArea, .checkboxAreaChecked {
    display:block;
    float:left;
    clear:left;
    width:13px;
    height:13px;
    font-size:0;
    padding:0;
    margin:0;
    cursor:pointer;
}
.checkboxArea {
    background:url(/images/niceforms/checkbox.gif) no-repeat left top;
}
.checkboxAreaChecked {
    background:url(/images/niceforms/checkbox.gif) no-repeat left bottom;
}
.focused {
    border:1px dotted #ddd;
}
/* Text inputs */
.textinput, .textinputHovered {
    height:15px;
    background:url(/images/niceforms/input_bg.gif) repeat-x left top;
    border:none;
    padding:4px 0;
    vertical-align:middle;
}
.textinputHovered {
    background-position:left bottom;
}
.inputCorner {
    padding-bottom:0;
    vertical-align:middle;
}
/* Text areas */
.txtarea .tr, .txtarea .tr_xon {
    background:url(/images/niceforms/txtarea_tr.gif) no-repeat top right;
}
.txtarea .tr_xon {
    background:url(/images/niceforms/txtarea_tr_xon.gif) no-repeat top right;
}
.txtarea img.txt_corner {
    width:5px;
    height:5px;
    display:block;
}
.txtarea .br, .txtarea .br_xon {
    background:url(/images/niceforms/txtarea_br.gif) no-repeat top right;
}
.txtarea .br_xon {
    background:url(/images/niceforms/txtarea_br_xon.gif) no-repeat top right;
}
.txtarea .cntr {
    background:url(/images/niceforms/txtarea_cntr.gif) repeat-y right top;
}
.txtarea .cntr_xon {
    background:url(/images/niceforms/txtarea_cntr_xon.gif) repeat-y right top;
}
.txtarea .cntr_l, .txtarea .cntr_l_xon {
    width:5px;
    background:url(/images/niceforms/txtarea_l.gif) repeat-y left top;
    float:left;
}
.txtarea .cntr_l_xon {
    background:url(/images/niceforms/txtarea_l_xon.gif) repeat-y left top;
}
.txtarea textarea {
    border:0;
    background:none;
    padding:0;
    margin:5px;
}
/* Selects */
.selectArea {
    width:200px;
    height:21px;
    background:url(/images/niceforms/select_bg.gif) repeat-x left top;
}
.selectArea .left {
    width:8px;
    height:21px;
    float:left;
    background:url(/images/niceforms/select_left.gif) no-repeat left top;
}
.selectArea .right {
    width:21px;
    height:21px;
    float:right;
    background:url(/images/niceforms/select_right.gif) no-repeat left top;
}
.selectArea .right a {
    display:block;
    width:200px;
    height:21px;
    margin-left:-179px;
    position:absolute;
}
.selectArea .right i {
    display:none;
}
.selectArea .center {
    width:160px;
    color:#FFF;
    padding-top:3px;
    overflow:hidden;
    white-space:nowrap;
}
/* Selects drop-down */
.optionsDivInvisible, .optionsDivVisible {
    position:absolute;
    margin-top:-1px;
    margin-left:3px;
    width:172px;
    background:#6f7074;
    padding:2px;
    font-size:11px;
    z-index:20;
}
.optionsDivInvisible {
    display:none;
}
.optionsDivVisible {
    display:block;
}
.optionsDivVisible p {
    margin:0;
    padding:0;
}
.optionsDivVisible a {
    color:#F2F2F2;
    text-decoration:none;
    display:block;
    padding:1px 4px;
    border:1px solid #6f7074;
}
.optionsDivVisible a:hover {
    color:#FFF;
    background:#5F6062;
    border-color:#cfd0d6;
}
/* Button */
.buttonSubmit, .buttonSubmitHovered {
    width:auto;
    height:26px;
    color:#FFF;
    text-transform:uppercase;
    padding:2px;
    background:url(/images/niceforms/button_bg.gif) repeat-x left top;
    cursor:pointer;
    border:none;
}
.buttonSubmitHovered {
    background-position:left bottom;
}
.buttonImg {
    vertical-align:bottom;
}
/*
  ###################################################################
  form divs with icons
  ###################################################################
 */
.panel_name, .panel_username, .panel_signin, .panel_homepage, .panel_password, .panel_password_confirmation, .panel_email, .panel_profile {
    padding:0;
    margin:0 0 0.6em 0;
}
.panel_name {
    background:url(/images/silk/icons/vcard.png) no-repeat left top;
}
.panel_email {
    background:url(/images/silk/icons/email.png) no-repeat left top;
}
.panel_username {
    background:url(/images/silk/icons/user.png) no-repeat left top;
}
.panel_password {
    background:url(/images/silk/icons/key.png) no-repeat left top;
}
.panel_homepage {
    background:url(/images/silk/icons/page_world.png) no-repeat left top;
}
.panel_password_confirmation {
    background:url(/images/silk/icons/lock_open.png) no-repeat left top;
}
.panel_profile {
    background:url(/images/silk/icons/color_swatch.png) no-repeat left top;
}
.button_signin {
    padding:0 0.3em 0 0;
    margin:0;
    text-align:right;
}
/*
  ###################################################################
  search form
  ###################################################################
 */
.panel_search_story {
    padding:0;
    margin:0 0 0.6em 0;
}
.panel_search_story {
    background:url(/images/silk/icons/vcard.png) no-repeat left top;
}
/*
  ###################################################################
  Background related
  ###################################################################
 */
.bg_top {
