<div class="panel_search_stories">
  <div class="left">
    <h1>
      <%= link_to sres.title, artigo_path(sres.permalink) %>
    </h1>
    <% if subtitle %>
    <div class="separator_top"/>&nbsp;</div>
    <h2><%= sres.subtitle %></h2>
    <% end %>
    <div class="separator_top"/>&nbsp;</div>
    <ul>
      <li style="background: url(/images/silk/icons/user.png) no-repeat left top;">
        Submetido por <%= link_to sres.user.name, utilizador_path(sres.user.username) %>
      </li>
      <li style="background: url(/images/silk/icons/time.png) no-repeat left top;">
        Criado <%= Util.timeago(sres.created_at) %>
      </li>
      <% unless sres.updated_at == sres.created_at %>
      <li style="background: url(/images/silk/icons/note.png) no-repeat left top;">
        Editado pela Ãºltima vez <%= Util.timeago(sres.updated_at) %>.
      </li>
      <% end %>
 	</ul>
  </div>
  <div class="right">
    <%= render_text(sres.contents) %><p/>
  </div>
</div><p/>